<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET请求"
        />

    <Button
        android:id="@+id/button_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求"
      />

    <Button
        android:id="@+id/button_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JSON数据请求" />

    <Button
        android:id="@+id/button4_image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMAGELOADER加载图片"
       />

    <Button
        android:id="@+id/button4_image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMAGEREQUEST加载图片"
    />

    <Button
        android:id="@+id/button_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NetWorkImageView"
       />



    <ImageView
        android:id="@+id/volley_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/volley_imagenetview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tx_result"
        />
</ScrollView>

</LinearLayout>
